<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/content_nav_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content_nav_header_1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:civ_border_width="1dp"
                app:civ_border_color="@android:color/white"
                android:src="@mipmap/ic_launcher_round" />
-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textStyle="bold"
                android:text="Diego Cueva"
                android:id="@+id/txt_user_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/txt_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="diegocu@gmail.com" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:id="@+id/content_show_events"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="¿No encuentras tu evento favorito? "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="13sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="Toca aquí para contactarnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>